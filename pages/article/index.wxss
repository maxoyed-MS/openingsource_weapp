/* pages/news/detail/index.wxss */
/* news_content */
    .news_content {
        padding: 20rpx 40rpx;
        margin-bottom: 200rpx;
    }
    .news_content .title .text {
        font-size:48rpx;
        line-height:1.6;
        font-weight:bold;
        outline:none;
        color:#3a4040;
        margin-bottom:24rpx;
    }
    .news_content .title .more-info {
        font-size:24rpx;
        line-height:1.6;
        color:#959595;
        font-weight:normal;
        outline:none;
        margin-bottom:30rpx;
        padding-bottom: 5rpx;
        border-bottom:1px solid #eee;
    }
    .news_content .title .more-info {
        display: flex;
    }
    .news_content .title .more-info .item {
        font-size: 20rpx;
        width: auto;
        height: auto;
        color: #888888;
        display: flex;
        align-items: center;
        margin-right: 40rpx;
    }
    .news_content .title .more-info .item .icon {
        width:24rpx;
        height:24rpx;
        margin-right:10rpx;
        vertical-align:middle;
    }
    .news_content .article {
        font-size:32rpx;
        line-height:64rpx;
        letter-spacing:1px
    }
    .news_content .footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 84rpx;
        line-height: 84rpx;
        box-shadow: 0 -2rpx 2rpx 0 rgba(0, 0, 0, 0.1);
        background: #ffffff;
        color: #2A84FF;
        text-align: center;
        font-size: 32rpx;
    }
    .news_content .fab {
        position: fixed;
        width: 100rpx;
        height: 100rpx;
        right: 40rpx;
        bottom: 120rpx;
        z-index: 999;
        background: #ffffff;
        border-radius: 50rpx;
        box-shadow: 0 0 10rpx 6rpx rgba(0, 0, 0, 0.2);
        display: flex;
        justify-content: space-around;
        align-items: center;
    }
    .news_content .fab image {
        width: 48rpx;
        height: 48rpx;
    }